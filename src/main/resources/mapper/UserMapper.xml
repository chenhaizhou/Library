<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thoughtworks.dolphin.dao.UserDAO">

    <resultMap id="UserResult" type="UserEntity">
        <result column="user_name" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    <select id="selectUserByName" parameterType="map" resultMap="UserResult">
        select * from users where user_name = #{username}
    </select>

    <insert id="insertUserByUsername" parameterType="map">
        insert into users (user_name, name, password, is_built_admin) values(#{username}, #{name}, #{password}, 0)
    </insert>
</mapper>