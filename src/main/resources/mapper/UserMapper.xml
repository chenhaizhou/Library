<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thoughtworks.dolphin.dao.UserDAO">

    <select id="isUserInfoRight" parameterType="map" resultType="int">
        select count(*) from users where user_name = #{username} and pass_word = #{password}
    </select>

    <select id="isUserExist" parameterType="map" resultType="int">
        select  count(*) from users where user_name = #{username}
    </select>

</mapper>